<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cardComputerImage"
            android:layout_width="@dimen/margin64"
            android:layout_height="@dimen/margin64"
            android:layout_margin="@dimen/margin20"
            android:src="@drawable/ic_baseline_computer_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardComputerBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/cardComputerModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin4"
                />
            <TextView
                android:id="@+id/cardComputerModelYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin4"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>